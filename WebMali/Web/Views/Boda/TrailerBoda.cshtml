@{
    ViewData["Title"] = "Trailer Boda";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Mali Fiestas y Eventos</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            margin: 0;
            background-color: #000;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
        }

        .trailer-section {
            position: relative;
            min-height: 100vh;
            padding: 100px 0 80px;
        }

        .background-blur {
            position: absolute;
            inset: 0;
            background: url('/images/foto4.jpg') no-repeat center center / cover;
            filter: blur(18px) brightness(0.35);
            z-index: 1;
        }

        .contenido {
            position: relative;
            z-index: 2;
        }

        h1 {
            letter-spacing: 2px;
        }

        .trailer-box {
            max-width: 960px;
            margin: 0 auto 90px;
        }

        .trailer-title {
            font-size: 1.6rem;
            font-weight: 700;
            margin-bottom: 18px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* 🎬 CONTENEDOR 16:9 */
        .video-wrapper {
            position: relative;
            width: 100%;
            padding-top: 56.25%;
            border-radius: 22px;
            overflow: hidden;
            box-shadow: 0 30px 80px rgba(0,0,0,0.85);
            background: #000;
        }

        .video-wrapper video {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .btn-volver {
            border-radius: 30px;
            padding: 12px 30px;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .trailer-section {
                padding: 70px 0 60px;
            }

            .trailer-title {
                font-size: 1.3rem;
            }
        }
    </style>
</head>

<body>

    <section class="trailer-section">
        <div class="background-blur"></div>

        <div class="container contenido text-center">

            <h1 class="display-5 fw-bold mb-5 text-uppercase">
                Trailers de Bodas
            </h1>

            <!-- 🎬 TRAILER BODA 1 -->
            <div class="trailer-box">
                <div class="trailer-title">Gerardo & Yessica · Boda</div>
                <div class="video-wrapper">
                    <video controls preload="metadata">
                        <source src="~/Videos/BodaTrailer/MMGerardoyYessica.mp4" type="video/mp4" />
                        Tu navegador no soporta video HTML5.
                    </video>
                </div>
            </div>

            <!-- 🎬 TRAILER BODA 2 -->
            <div class="trailer-box">
                <div class="trailer-title">Ximena & Gaston · Boda</div>
                <div class="video-wrapper">
                    <video controls preload="metadata">
                        <source src="~/Videos/BodaTrailer/MMXimenayGaston.mp4" type="video/mp4" />
                        Tu navegador no soporta video HTML5.
                    </video>
                </div>
            </div>

            <!-- VOLVER -->
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-volver">
                Volver al inicio
            </a>

        </div>
    </section>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
