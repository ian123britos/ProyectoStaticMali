<script>
    function ocultarTodo() {
        document.getElementById("selector").style.display = "none";
        document.getElementById("videos").style.display = "none";
        document.getElementById("fotos").style.display = "none";
        document.querySelectorAll(".galeria").forEach(g => g.style.display = "none");
    }

    function mostrarVideos() {
        ocultarTodo();
        document.getElementById("videos").style.display = "block";
    }

    function mostrarFotos() {
        ocultarTodo();
        document.getElementById("fotos").style.display = "block";
    }

    function abrirCarpeta(nombre) {
        ocultarTodo();
        document.getElementById("galeria-" + nombre).style.display = "block";
    }

    function volver() {
        ocultarTodo();
        document.getElementById("selector").style.display = "flex";
    }

    function volverAFotos() {
        ocultarTodo();
        document.getElementById("fotos").style.display = "block";
    }
</script>
